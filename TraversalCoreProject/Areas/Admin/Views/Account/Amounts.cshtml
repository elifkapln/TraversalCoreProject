@model List<Account>
@{
    ViewData["Title"] = "Amounts";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Personal Hesap Bakiyeleri</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Bakiye</th>
    </tr>
    @foreach (var item in Model)
    {
        { count += 1; }
        <tr>
            <td>@count</td>
            <td>@item.Name</td>
            <td>@item.Balance</td>
        </tr>
    }
</table>

